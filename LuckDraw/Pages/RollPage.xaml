<Page x:Class="LuckDraw.Pages.RollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LuckDraw.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Roll">

    <StackPanel>
        <ToggleButton x:Name="RollButton"
                      Content="{DynamicResource Start}"
                      Style="{StaticResource ContentToggleButtonStyle}"
                      Click="RollButton_Click"/>
        <TextBlock Margin="0,20,0,0"
                   x:Name="ResultTextBox"
                   Style="{StaticResource ContentTextBlockStyle}"/>
    </StackPanel>
</Page>
