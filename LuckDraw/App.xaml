<Application x:Class="LuckDraw.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LuckDraw"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnExplicitShutdown"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PuranLai.Tools;component/Resources/StyleDictionary.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/PuranLai.Tools;component/Resources/ControlTemplates.xaml"/>
                <ResourceDictionary Source="Resources/Languages/index.xaml"/>
                <ResourceDictionary Source="Resources/Languages/zh-cn.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
